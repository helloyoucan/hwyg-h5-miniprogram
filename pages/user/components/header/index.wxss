/* pages/user/components/header/index.wxss */

.header {
  height: 325rpx;
  padding: 80rpx 30rpx 0;
  position: relative;
  line-height: 1;
}

.bgImg {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.iconGroup {
  position: absolute;
  top: 61rpx;
  right: 11rpx;
  display: flex;
}

.iconItem {
  color: #fff;
  font-size: 30rpx;
  padding: 19rpx;
}

.userContent {
  display: flex;
  position: relative;
  z-index: 2;
}

.userIcon {
  position: relative;
}
.userAvatar{
   display: block;
  border-radius: 50%;
  border: 2rpx solid #fff;
  background-color: #eee;
  width: 124rpx;
  height: 124rpx;
}
.iconEdit{
  border: 2px solid #ee3f3f;
  color: #ee3f3f;
  background-color: #fff;
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  border-radius: 50%;
  right: 0;
  bottom: 0;
  line-height: 1;
}
.userInfo{
  margin-left: 20rpx;
}
.userName{
  padding: 20rpx 0;
  font-size: 36rpx;
  color: #fff;
}
.authTag{
  display: inline-block;
  min-width: 148rpx;
  background-color: #fff;
  border-radius: 6rpx;
  text-align: center;
  color: #ee3f3f;
  padding: 5rpx;
  font-size: 26rpx;
}