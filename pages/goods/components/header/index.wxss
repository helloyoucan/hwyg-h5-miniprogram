/* pages/goods/components/header/index.wxss */

.header {
  background: linear-gradient(90deg, #f2693d, #cb191d);
  color: #fff;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  position: relative;
}

.tabs {
  display: inline-flex;
}

.tabItem {
  width: 186rpx;
  font-size: 30rpx;
  color: rgba(255,255,255, 0.6);
  position: relative;
  transition: color 0.3s;
}

.tabItem.active {
  color: #fff;
}

.tabItem.active::before {
  content: "";
  position: absolute;
  bottom: 6rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 64rpx;
  height: 4rpx;
  background-color: #fff;
  border-radius: 2rpx;
}

.btnGruop {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 20rpx;
  line-height: 1;
}

.searchBtn, .plusBtn {
  width: 36rpx;
  height: 36rpx;
  font-size: 30rpx;
  padding: 10px;
  color: #fff;
}

.plusBtn {
  margin-left: 20rpx;
}
