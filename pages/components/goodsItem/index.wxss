/* pages/home/components/goodsItem/index.wxss */
.goods-card {
  display: flex;
  padding: 20rpx 30rpx;
  position: relative;
  background-color: #fff;
}
.goodsImg {
  width: 230rpx;
  height: 230rpx;
  background-color: #eee;
  border-radius: 10rpx;
  flex-shrink: 0;
}
.goodsInfo {
  flex-grow: 1;
  padding-left: 26rpx;
  overflow: hidden;
}
.name {
  padding: 20rpx 0 0;
  font-size: 36rpx;
  font-weight: bolder;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.infoItem {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
}
.price {
  font-size: 38rpx;
  line-height: 26rpx;
  vertical-align: baseline;
  color: #ee3f3f;
  font-weight: bolder;
  margin-top: 34rpx;
}
.unit {
  font-size: 26rpx;
  font-weight: normal;
  margin-left: 5rpx;
}